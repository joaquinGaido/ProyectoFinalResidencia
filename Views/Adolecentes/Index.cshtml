@model IEnumerable<ProyectoFinalResidencia.Models.Adolecentes>

@{
    ViewData["Title"] = "Index";
}

<div class="row text-center">
    <h2>Adolecentes</h2>
</div>
<hr />
<div class="row">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>
<hr />
<div class="row">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LugarNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nacionalidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.familiaId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @item.fechaNacimiento.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LugarNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nacionalidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Familia.NombreFamilia)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-list"></i></a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
